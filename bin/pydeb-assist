#!/bin/zsh
mkdir $1 && readme="/README.md" && echo "# ${1}" >> $1$readme && release=$(echo $readme | sed "s/A/L/" | sed "s/D/E/" | sed "s/M/AS/") && echo "# Release Log" >> $1$release && echo "TODO" >> "${1}/TODO" && mkdir "${1}/bin" "${1}/test" "${1}/${1}" && echo "#!$(which python)" >> "${1}/bin/${1}" && echo "pytest && flask8 . --config=~/Dev/term-youtube/flake8_config" >> "${1}/test_cov.sh" && echo "[pytest]\naddopts = --junitxml=pytest.xml --cov ~/Dev/term-youtube/tests -v --cov-report=xml" >> "${1}/pytest.ini" && echo "[flake8]\nignore = E251\nmax-complexity = 10" >> "${1}/flake8_config" && touch "${1}/requirements.txt" && echo "from setuptools import setup\n\nsetup(name='${1}',\n    version='1.0.0'\n)" >> "${1}/setup.py" && touch "${1}/prepare.sh" 
